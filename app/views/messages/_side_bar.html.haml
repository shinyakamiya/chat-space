%div.side-bar
  .side-bar__side-header  
    .side-bar__side-header__box
      %p.side-bar__side-header__box__top-items
        = current_user.name
      %ul.side-bar__side-header__box__top-items__icon
        %li.side-bar__side-header__box__top-items__icon__edit
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon')
        %li.side-bar__side-header__box__top-items__icon__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

